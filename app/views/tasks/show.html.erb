<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<% if @task.completed? %>
  <div>
    <i class="far fa-check-square"></i>  Done!
  </div>
<% else %>
  <div>
    <i class="far fa-square"></i> Hurry up and get it done!
  </div>
<% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit this task", edit_task_path  %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"}
%>
